\ProvidesPackage{chato-notes}[2007/06/11 ChaTo notes]
\RequirePackage{xcolor,color,marvosym,soul}

% Colors
\definecolor{MyRed}{rgb}{0.6,0.0,0.0} 
\definecolor{MyBlack}{rgb}{0.1,0.1,0.1} 
\definecolor{asparagus}{rgb}{0.53, 0.66, 0.42}
\definecolor{lightgreen}{rgb}{0.788235294117647, 0.9764705882352941, 0.8705882352941177}

\newcommand{\inred}[1]{{\color{MyRed}\sf\textbf{\textsc{#1}}}}
\newcommand{\hilight}[1]{\colorbox{yellow}{#1}}
\newcommand{\hlg}[1]{{\sethlcolor{lightgreen}\hl{#1}}}

% Frame
\newcommand{\frameit}[2]{
    \begin{center}
    {\color{MyRed}
    \framebox[.9\columnwidth][l]{
        \begin{minipage}{.85\columnwidth}
        \inred{#1}: {\sf\color{MyBlack}#2}
        \end{minipage}
    }\\
    }
    \end{center}
}

\DeclareOption{show}{
	%\newcommand{\note}[2][]{\def\@tmpsig{#1}\frameit{{\Pointinghand} Note}{#2\ifx \@tmpsig \@empty \else \mbox{ --\em \hl{#1}}\fi}}
	\newcommand{\todo}[2][]{\def\@tmpsig{#1}\frameit{{\Writinghand} To-do}{#2\ifx \@tmpsig \@empty \else \mbox{ --\em \hl{#1}}\fi}}
    \newcommand{\inote}[1]{\inred{$\lceil${{\Pointinghand} }} {\hl{\sf#1}} \inred{$\rfloor$}}
    \newcommand{\dnote}[1]{\inred{$\lceil${{\Pointinghand} }} {\hlg{\sf#1}} \inred{$\rfloor$}}
	\newcommand{\citemissing}[0]{\inred{[citation]}}
}
\DeclareOption{hide}{
	\newcommand{\note}[2][]{}
	\newcommand{\todo}[2][]{}
	\newcommand{\inote}[1]{}
	\newcommand{\dnote}[1]{}
	\newcommand{\citemissing}[0]{}
}

\ProcessOptions
